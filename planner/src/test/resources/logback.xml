<configuration debug="false">

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level %boldGreen([%logger{0}]) %msg %n</pattern>
        </encoder>
    </appender>

    <logger name="com.ingbyr.hwsc.reader.XMLDataSetReader" level="off"/>
    <logger name="com.ingbyr.dscg.planner.Yashp2" level="off"/>
    <logger name="com.ingbyr.dscg.planner.Tpg" level="off"/>
    <logger name="com.ingbyr.dscg.MutationAddState" level="off"/>
    <logger name="com.ingbyr.dscg.MutationDelState" level="off"/>
    <logger name="com.ingbyr.dscg.MutationAddConcept" level="off"/>
    <logger name="com.ingbyr.dscg.MutationDelConcept" level="off"/>
    <logger name="com.ingbyr.dscg.CrossoverSwapState" level="off"/>
    <logger name="com.ingbyr.dscg.Evaluator" level="off"/>
    <logger name="com.ingbyr.dscg.EvaluatorConcurrent" level="off"/>
    <logger name="com.ingbyr.dscg.IndividualGenerator" level="off"/>
    <logger name="com.ingbyr.dscg.SurvivalSelector" level="off"/>
    <logger name="com.ingbyr.dscg.FitnessLinearAggregation" level="off"/>
    <logger name="com.ingbyr.dscg.FitnessBinaryIndicator" level="off"/>
    <logger name="com.ingbyr.dscg.FitnessParetoFront" level="off"/>
    <logger name="com.ingbyr.dscg.DscgAnalyzer" level="on"/>
    <logger name="com.ingbyr.dscg.HeuristicInfo" level="on"/>

    <root level="debug">
        <appender-ref ref="console"/>
    </root>

</configuration>